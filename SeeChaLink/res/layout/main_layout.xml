<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image_background" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/image_background"
        android:orientation="vertical" >

        <com.home.view.CommonTitleView
            android:id="@+id/toplayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/sec_nav_hei"
            android:alpha="0.7"
            android:background="#333"
            android:orientation="horizontal" >

            <!-- android:background="@color/black_grey_color" -->

            <Button
                android:id="@+id/btn_add_control"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/black_grey_color"
                android:drawableTop="@drawable/icon_add_control"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="添加遥控"
                android:textColor="@color/text_grey_color"
                android:textSize="@dimen/text_size_18" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/vertical_line_color" />

            <Button
                android:id="@+id/btn_add_scene"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/black_grey_color"
                android:drawableTop="@drawable/icon_add_scene"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="添加场景"
                android:textColor="@color/text_grey_color"
                android:textSize="@dimen/text_size_18" />
        </LinearLayout>

        <ListView
            android:id="@+id/list_scene"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/air_float"
            android:divider="@color/transparent"
            android:dividerHeight="10dp"
            android:listSelector="#00000000"
            android:scrollbars="none" />
        <!-- <GridView -->
        <!-- android:id="@+id/grid_scene" -->
        <!-- android:layout_width="match_parent" -->
        <!-- android:layout_height="match_parent" -->
        <!-- android:layout_margin="10dp" -->
        <!-- android:divider="@null" -->
        <!-- android:horizontalSpacing="10dp" -->
        <!-- android:listSelector="#00000000" -->
        <!-- android:numColumns="2" -->
        <!-- android:scrollbars="none" -->
        <!-- android:verticalSpacing="10dp" /> -->

    </LinearLayout>

    <fragment
        android:id="@+id/id_left_menu"
        android:name="com.home.mainactivity.MenuLeftFragment"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:tag="LEFT" />

    <!-- <fragment -->
    <!-- android:id="@+id/id_right_menu" -->
    <!-- android:name="com.home.mainactivity.MenuRightFragment" -->
    <!-- android:layout_width="100dp" -->
    <!-- android:layout_height="match_parent" -->
    <!-- android:layout_gravity="right" -->
    <!-- android:tag="RIGHT" /> -->

</android.support.v4.widget.DrawerLayout> <!-- <LinearLayout -->
