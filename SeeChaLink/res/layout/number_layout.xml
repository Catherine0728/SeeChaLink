<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="vertical" >

    <com.home.view.CommonTitleView
        android:id="@+id/toplayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.0dip" >

            <ImageButton
                android:id="@id/btn_num_1"
                style="@style/custom_button_style"
                android:layout_width="60.0dip"
                android:layout_height="60.0dip"
                android:background="@drawable/home_rm_1_selector"
                android:tag="101"
                android:text="1"
                android:textColor="@color/eair_text_black"
                android:textSize="20.0sp" />

            <ImageButton
                android:id="@id/btn_num_2"
                style="@style/custom_button_style"
                android:layout_width="60.0dip"
                android:layout_height="60.0dip"
                android:layout_toRightOf="@id/btn_num_1"
                android:background="@drawable/home_rm_2_selector"
                android:tag="102"
                android:text="2"
                android:textColor="@color/eair_text_black"
                android:textSize="20.0sp" />

            <ImageButton
                android:id="@id/btn_num_3"
                style="@style/custom_button_style"
                android:layout_width="60.0dip"
                android:layout_height="60.0dip"
                android:layout_toRightOf="@id/btn_num_2"
                android:background="@drawable/home_rm_3_selector"
                android:tag="103"
                android:text="3"
                android:textColor="@color/eair_text_black"
                android:textSize="20.0sp" />

            <ImageButton
                android:id="@id/btn_num_4"
                style="@style/custom_button_style"
                android:layout_width="60.0dip"
                android:layout_height="60.0dip"
                android:layout_toRightOf="@id/btn_num_3"
                android:background="@drawable/home_rm_4_selector"
                android:scaleType="fitXY"
                android:tag="104"
                android:text="4"
                android:textColor="@color/eair_text_black"
                android:textSize="20.0sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip" >

            <ImageButton
                android:id="@id/btn_num_5"
                style="@style/custom_button_style"
                android:layout_width="60.0dip"
                android:layout_height="60.0dip"
                android:background="@drawable/home_rm_5_selector"
                android:tag="105"
                android:text="5"
                android:textColor="@color/eair_text_black"
                android:textSize="20.0sp" />

            <ImageButton
                android:id="@id/btn_num_6"
                style="@style/custom_button_style"
                android:layout_width="60.0dip"
                android:layout_height="60.0dip"
                android:layout_toRightOf="@id/btn_num_5"
                android:background="@drawable/home_rm_6_selector"
                android:tag="106"
                android:text="6"
                android:textColor="@color/eair_text_black"
                android:textSize="20.0sp" />

            <ImageButton
                android:id="@id/btn_num_7"
                style="@style/custom_button_style"
                android:layout_width="60.0dip"
                android:layout_height="60.0dip"
                android:layout_toRightOf="@id/btn_num_6"
                android:background="@drawable/home_rm_7_selector"
                android:tag="107"
                android:text="7"
                android:textColor="@color/eair_text_black"
                android:textSize="20.0sp" />

            <ImageButton
                android:id="@id/btn_num_8"
                style="@style/custom_button_style"
                android:layout_width="60.0dip"
                android:layout_height="60.0dip"
                android:layout_toRightOf="@id/btn_num_7"
                android:background="@drawable/home_rm_8_selector"
                android:tag="108"
                android:text="8"
                android:textColor="@color/eair_text_black"
                android:textSize="20.0sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip" >

            <ImageButton
                android:id="@id/btn_num_repeat"
                style="@style/custom_button_style"
                android:layout_width="60.0dip"
                android:layout_height="60.0dip"
                android:background="@drawable/home_rm_repeat_selector"
                android:tag="110"
                android:text="*"
                android:textColor="@color/eair_text_black"
                android:textSize="20.0sp" />

            <ImageButton
                android:id="@id/btn_num_9"
                style="@style/custom_button_style"
                android:layout_width="60.0dip"
                android:layout_height="60.0dip"
                android:layout_toRightOf="@id/btn_num_repeat"
                android:background="@drawable/home_rm_9_selector"
                android:tag="109"
                android:text="9"
                android:textColor="@color/eair_text_black"
                android:textSize="20.0sp" />

            <ImageButton
                android:id="@id/btn_num_0"
                style="@style/custom_button_style"
                android:layout_width="60.0dip"
                android:layout_height="60.0dip"
                android:layout_toRightOf="@id/btn_num_9"
                android:background="@drawable/home_rm_0_selector"
                android:tag="100"
                android:text="0"
                android:textColor="@color/eair_text_black"
                android:textSize="20.0sp" />

            <ImageButton
                android:id="@id/btn_num_nosound"
                style="@style/custom_button_style"
                android:layout_width="60.0dip"
                android:layout_height="60.0dip"
                android:layout_toRightOf="@id/btn_num_0"
                android:background="@drawable/home_rm_nosound_selector"
                android:tag="111"
                android:text="\#"
                android:textColor="@color/eair_text_black"
                android:textSize="20.0sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>