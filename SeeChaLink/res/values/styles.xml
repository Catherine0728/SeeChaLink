    <style name="custom_button_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/btn_bottom_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/btncommon_marglr</item>
        <item name="android:layout_marginRight">@dimen/btncommon_marglr</item>
    </style>

    <style name="more_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingLeft">5dp</item>
    </style>

    <style name="more_tablerow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="more_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="more_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <!-- 按钮的通用样式 适用于两个或多个按钮放在一排 -->
    <style name="btn_common_oneline">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/btn_bottom_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/btncommon_marglr</item>
        <item name="android:layout_marginRight">@dimen/btncommon_marglr</item>
    </style>

    <!-- 简单宽高占满weight1 -->
    <style name="fill_fill_weight1">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- 功能列表弹窗的 按钮样式 -->
    <style name="popupwindow_btn_normal">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/btn_bottom_height</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/selector_for_bottom_dialog_item</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="Theme_Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是悬浮还是覆盖 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 是否有系统自带标题栏 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 背景是否变暗 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 去除黑色背景 -->
    </style>

    <!-- <style name="shotcutDialogAnimation"> -->
    <!-- <item name="android:windowEnterAnimation">@anim/n_pop_enter_bottom_up</item> -->
    <!-- <item name="android:windowExitAnimation">@anim/n_pop_exit_bottom_down</item> -->
    <!-- </style> -->


    <!-- 普通文字显示 -->
    <style name="textview_common">
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- 设置按钮item -->
    <style name="StyleButtonItem">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dip</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_green_big</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">@dimen/btncommon_marglr</item>
        <item name="android:layout_marginRight">@dimen/btncommon_marglr</item>
    </style>

    <!-- ScrollView 通用样式 fill weight 1 -->
    <style name="scrollview_fill">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:fillViewport">true</item>
        <item name="android:scrollbars">none</item>
    </style>

    <!-- 按钮的通用样式 适用于提示框的按钮 -->
    <style name="dialogbtn">
        <item name="android:layout_width">@dimen/btn_dialog_width</item>
        <item name="android:layout_height">@dimen/btn_dialog_height</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TextStyle">
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:focusable">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
    </style>

    <style name="Scorll_Style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="Button_Style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">@dimen/text_size_20</item>
    </style>

</resources>